= csp_meta_tag
= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload', turbolink_track: true
= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload', turbolink_track: true
= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', turbolink_track: true